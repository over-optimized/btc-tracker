# Test Environment Configuration for Vitest
# This file provides predictable environment values for feature flag testing

# =============================================================================
# TEST ENVIRONMENT DETECTION
# =============================================================================
MODE=test
NODE_ENV=test
VITE_APP_VERSION=0.3.0-test
VITE_DEPLOYMENT_ENV=test

# =============================================================================
# FEATURE FLAG TEST DEFAULTS (PRODUCTION-LIKE FOR SAFETY)
# =============================================================================

# Safe Mode Configuration - Default OFF for most tests
VITE_SAFE_MODE=false

# Debug Mode Configuration - OFF in test environment
VITE_DEBUG_MODE=false

# High Risk Features - Default OFF (production behavior)
VITE_ENABLE_EDUCATIONAL_COMPONENTS=false
VITE_ENABLE_EXPANDED_CLASSIFICATIONS=false
VITE_ENABLE_TAX_EDUCATION_HUB=false
VITE_ENABLE_LIGHTNING_TAX_SCENARIOS=false

# Medium Risk Features - Default ON with disclaimers
VITE_ENABLE_DETAILED_TAX_GUIDANCE=false
VITE_ENABLE_ADVANCED_TAX_TOOLTIPS=true
VITE_ENABLE_TAX_OPTIMIZATION=true
VITE_ENABLE_IRS_REFERENCES=true

# Low Risk Features - Always ON
VITE_ENABLE_PORTFOLIO_TRACKING=true
VITE_ENABLE_DATA_VISUALIZATION=true
VITE_ENABLE_IMPORT_EXPORT=true

# =============================================================================
# TEST-SPECIFIC CONFIGURATION
# =============================================================================

# Show feature flag debug info in tests
VITE_SHOW_FEATURE_FLAGS=false

# Disable performance metrics in tests
VITE_SHOW_PERFORMANCE_METRICS=false

# Legal compliance indicators for test verification
VITE_SHOW_LEGAL_DISCLAIMERS=true
VITE_SHOW_COMPLIANCE_INDICATORS=false

# Test environment flags
VITE_ENABLE_EXPERIMENTAL=false
VITE_ENABLE_HOT_RELOAD=false

# =============================================================================
# NOTE: Individual tests can override these values using test-specific env files
# or by setting environment variables in specific test scenarios
# =============================================================================