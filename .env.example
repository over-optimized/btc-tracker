# Bitcoin DCA Tracker - Environment Configuration Example
# Copy this file to .env.local and configure for your environment

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
NODE_ENV=development
VITE_APP_VERSION=0.3.0-dev
VITE_DEPLOYMENT_ENV=development

# =============================================================================
# LEGAL COMPLIANCE FEATURE FLAGS
# =============================================================================

# Safe Mode Configuration (REQUIRED FOR PRODUCTION)
# When true, enables enhanced disclaimers and limits features to mathematical calculations only
VITE_SAFE_MODE=false

# High Risk Features - DISABLE IN PRODUCTION (prescriptive tax advice)
# Educational components system with tax guidance tooltips and panels
VITE_ENABLE_EDUCATIONAL_COMPONENTS=true

# Expanded transaction classification system (12 options vs 4 basic)
VITE_ENABLE_EXPANDED_CLASSIFICATIONS=true

# Dedicated tax education hub route with comprehensive guidance
VITE_ENABLE_TAX_EDUCATION_HUB=true

# Detailed tax guidance and specific treatment instructions
VITE_ENABLE_DETAILED_TAX_GUIDANCE=true

# Lightning Network tax scenarios and specific guidance
VITE_ENABLE_LIGHTNING_TAX_SCENARIOS=true

# Medium Risk Features - Enhanced disclaimers required
# Advanced tax-specific tooltips with treatment guidance
VITE_ENABLE_ADVANCED_TAX_TOOLTIPS=true

# Tax optimization suggestions and strategy recommendations
VITE_ENABLE_TAX_OPTIMIZATION=true

# Direct IRS regulation references and interpretations
VITE_ENABLE_IRS_REFERENCES=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug mode for development with feature flag visibility
VITE_DEBUG_MODE=true

# Show feature flag debug panel in development
VITE_SHOW_FEATURE_FLAGS=true

# Enable experimental features for development and testing
VITE_ENABLE_EXPERIMENTAL=true

# Show performance metrics in development
VITE_SHOW_PERFORMANCE_METRICS=false

# Enable hot reload in development
VITE_ENABLE_HOT_RELOAD=true

# =============================================================================
# LEGAL COMPLIANCE & REVIEW
# =============================================================================

# Enable legal review mode for staging environment
VITE_ENABLE_LEGAL_REVIEW_MODE=false

# Show compliance indicators throughout the application
VITE_SHOW_COMPLIANCE_INDICATORS=false

# Show legal disclaimers (should be true in production)
VITE_SHOW_LEGAL_DISCLAIMERS=false

# Legal approval flag for medium-risk features
VITE_LEGAL_APPROVAL=false

# Legal review completion flag
VITE_LEGAL_REVIEW_COMPLETE=false

# =============================================================================
# ENVIRONMENT-SPECIFIC CONFIGURATIONS
# =============================================================================

# Development Environment (.env.development)
# - All features enabled for development
# - Debug mode active
# - Safe mode disabled for testing

# Staging Environment (.env.staging)
# - High-risk features disabled
# - Safe mode enabled
# - Legal review mode active

# Production Environment (.env.production)
# - All high-risk features disabled
# - Safe mode required (true)
# - Legal disclaimers required (true)
# - Debug mode disabled