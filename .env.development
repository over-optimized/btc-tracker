# Development Environment - Full Features Enabled
# This file configures the development environment with all features active

NODE_ENV=development
VITE_APP_VERSION=0.3.0-dev
VITE_DEPLOYMENT_ENV=development

# =============================================================================
# LEGAL COMPLIANCE - DEVELOPMENT MODE
# =============================================================================

# Safe Mode - DISABLED for development testing
VITE_SAFE_MODE=false

# Show legal disclaimers - OPTIONAL in development
VITE_SHOW_LEGAL_DISCLAIMERS=false

# =============================================================================
# HIGH RISK FEATURES - ENABLED FOR DEVELOPMENT
# =============================================================================

# Educational components system - ENABLED for development
VITE_ENABLE_EDUCATIONAL_COMPONENTS=true

# Expanded classification system - ENABLED for development
VITE_ENABLE_EXPANDED_CLASSIFICATIONS=true

# Tax education hub - ENABLED for development
VITE_ENABLE_TAX_EDUCATION_HUB=true

# Detailed tax guidance - ENABLED for development
VITE_ENABLE_DETAILED_TAX_GUIDANCE=true

# Lightning tax scenarios - ENABLED for development
VITE_ENABLE_LIGHTNING_TAX_SCENARIOS=true

# =============================================================================
# MEDIUM RISK FEATURES - ENABLED FOR DEVELOPMENT
# =============================================================================

# Advanced tax tooltips - ENABLED
VITE_ENABLE_ADVANCED_TAX_TOOLTIPS=true

# Tax optimization suggestions - ENABLED
VITE_ENABLE_TAX_OPTIMIZATION=true

# IRS regulation references - ENABLED
VITE_ENABLE_IRS_REFERENCES=true

# =============================================================================
# DEVELOPMENT FEATURES - ENABLED
# =============================================================================

# Debug mode - ENABLED
VITE_DEBUG_MODE=true

# Feature flag visibility - ENABLED
VITE_SHOW_FEATURE_FLAGS=true

# Experimental features - ENABLED
VITE_ENABLE_EXPERIMENTAL=true

# Performance metrics - ENABLED
VITE_SHOW_PERFORMANCE_METRICS=true

# Hot reload - ENABLED
VITE_ENABLE_HOT_RELOAD=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Legal review mode - OPTIONAL for testing
VITE_ENABLE_LEGAL_REVIEW_MODE=false

# Compliance indicators - OPTIONAL
VITE_SHOW_COMPLIANCE_INDICATORS=false

# Legal flags - NOT APPLICABLE IN DEVELOPMENT
VITE_LEGAL_APPROVAL=false
VITE_LEGAL_REVIEW_COMPLETE=false