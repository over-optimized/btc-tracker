# Production Environment - Safe Mode Configuration
# This file configures the application for production deployment with legal compliance

NODE_ENV=production
VITE_APP_VERSION=0.3.0
VITE_DEPLOYMENT_ENV=production

# =============================================================================
# LEGAL COMPLIANCE - PRODUCTION SAFETY (REQUIRED)
# =============================================================================

# Safe Mode - MUST be enabled in production
VITE_SAFE_MODE=true

# Show legal disclaimers - REQUIRED in production
VITE_SHOW_LEGAL_DISCLAIMERS=true

# =============================================================================
# HIGH RISK FEATURES - ALL DISABLED IN PRODUCTION
# =============================================================================

# Educational components system - DISABLED (prescriptive tax advice)
VITE_ENABLE_EDUCATIONAL_COMPONENTS=false

# Expanded classification system - ENABLED (with enhanced disclaimers for safety)
VITE_ENABLE_EXPANDED_CLASSIFICATIONS=true

# Tax education hub - DISABLED (comprehensive tax guidance)
VITE_ENABLE_TAX_EDUCATION_HUB=false

# Detailed tax guidance - ENABLED with enhanced disclaimers (basic classification only)
VITE_ENABLE_DETAILED_TAX_GUIDANCE=true

# Lightning tax scenarios - DISABLED (specific tax treatments)
VITE_ENABLE_LIGHTNING_TAX_SCENARIOS=false

# =============================================================================
# MEDIUM RISK FEATURES - DISABLED IN PRODUCTION
# =============================================================================

# Advanced tax tooltips - DISABLED
VITE_ENABLE_ADVANCED_TAX_TOOLTIPS=false

# Tax optimization suggestions - DISABLED
VITE_ENABLE_TAX_OPTIMIZATION=false

# IRS regulation references - DISABLED
VITE_ENABLE_IRS_REFERENCES=false

# =============================================================================
# DEVELOPMENT FEATURES - DISABLED IN PRODUCTION  
# =============================================================================

# Debug mode - DISABLED
VITE_DEBUG_MODE=false

# Feature flag visibility - DISABLED
VITE_SHOW_FEATURE_FLAGS=false

# Experimental features - DISABLED
VITE_ENABLE_EXPERIMENTAL=false

# Performance metrics - DISABLED
VITE_SHOW_PERFORMANCE_METRICS=false

# =============================================================================
# API CACHING CONFIGURATION
# =============================================================================

# CoinGecko API key (recommended for production to avoid rate limits)
VITE_COINGECKO_API_KEY=

# Bitcoin price cache TTL in milliseconds (5 minutes for production)
VITE_BITCOIN_PRICE_CACHE_TTL=300000

# Bitcoin price polling interval in milliseconds (5 minutes for production)
VITE_BITCOIN_PRICE_POLL_INTERVAL=300000

# Enable SharedWorker for cross-tab coordination (enabled for production)
VITE_ENABLE_SHARED_WORKER=true

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# Legal compliance indicators - ENABLED for transparency
VITE_SHOW_COMPLIANCE_INDICATORS=true

# Legal review mode - DISABLED (only for staging)
VITE_ENABLE_LEGAL_REVIEW_MODE=false

# Legal approvals - NOT APPLICABLE IN PRODUCTION
VITE_LEGAL_APPROVAL=false
VITE_LEGAL_REVIEW_COMPLETE=false

# =============================================================================
# SUPABASE DATABASE CONFIGURATION - PRODUCTION
# =============================================================================

# Supabase Project URL - SET IN VERCEL ENVIRONMENT VARIABLES
# Get this from https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=

# Supabase Anonymous Key - SET IN VERCEL ENVIRONMENT VARIABLES
# This is safe for client-side use with Row Level Security
VITE_SUPABASE_ANON_KEY=

# Storage Mode Configuration
# 'auto' = automatic detection (localStorage for anonymous, supabase for authenticated)
VITE_DEFAULT_STORAGE_MODE=auto

# Enable Supabase integration for production
VITE_ENABLE_SUPABASE=true

# Enable user authentication in production
VITE_ENABLE_AUTHENTICATION=true

# Enable offline mode fallback for resilience
VITE_ENABLE_OFFLINE_MODE=true

# Supabase cache TTL in milliseconds (1 minute for production)
VITE_SUPABASE_CACHE_TTL=60000