# Staging Environment - Legal Review Configuration
# This file configures the staging environment for legal review and testing

NODE_ENV=staging
VITE_APP_VERSION=0.3.0-staging
VITE_DEPLOYMENT_ENV=staging

# =============================================================================
# LEGAL COMPLIANCE - STAGING SAFETY
# =============================================================================

# Safe Mode - ENABLED for staging
VITE_SAFE_MODE=true

# Show legal disclaimers - ENABLED
VITE_SHOW_LEGAL_DISCLAIMERS=true

# Legal review mode - ENABLED for staging testing
VITE_ENABLE_LEGAL_REVIEW_MODE=true

# Compliance indicators - ENABLED for review
VITE_SHOW_COMPLIANCE_INDICATORS=true

# =============================================================================
# HIGH RISK FEATURES - DISABLED IN STAGING (same as production)
# =============================================================================

# Educational components system - DISABLED
VITE_ENABLE_EDUCATIONAL_COMPONENTS=false

# Expanded classification system - DISABLED  
VITE_ENABLE_EXPANDED_CLASSIFICATIONS=false

# Tax education hub - DISABLED
VITE_ENABLE_TAX_EDUCATION_HUB=false

# Detailed tax guidance - DISABLED
VITE_ENABLE_DETAILED_TAX_GUIDANCE=false

# Lightning tax scenarios - DISABLED
VITE_ENABLE_LIGHTNING_TAX_SCENARIOS=false

# =============================================================================
# MEDIUM RISK FEATURES - SELECTIVELY ENABLED FOR TESTING
# =============================================================================

# Advanced tax tooltips - ENABLED for legal review
VITE_ENABLE_ADVANCED_TAX_TOOLTIPS=true

# Tax optimization suggestions - DISABLED
VITE_ENABLE_TAX_OPTIMIZATION=false

# IRS regulation references - DISABLED
VITE_ENABLE_IRS_REFERENCES=false

# =============================================================================
# DEVELOPMENT FEATURES - ENABLED FOR TESTING
# =============================================================================

# Debug mode - ENABLED for staging testing
VITE_DEBUG_MODE=true

# Feature flag visibility - ENABLED for review
VITE_SHOW_FEATURE_FLAGS=true

# Experimental features - DISABLED
VITE_ENABLE_EXPERIMENTAL=false

# Performance metrics - ENABLED for testing
VITE_SHOW_PERFORMANCE_METRICS=true

# =============================================================================
# LEGAL REVIEW FLAGS
# =============================================================================

# Legal approvals - PENDING REVIEW
VITE_LEGAL_APPROVAL=false
VITE_LEGAL_REVIEW_COMPLETE=false